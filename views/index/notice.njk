<div class="notice-wapperbox">
    <div class="notice-title pull-left">
        <span class="notice-before mr10 vm"></span>
        <span class="mr10 red vm">公告</span>
        <span class="vm">|</span>
    </div>
    <div class=" pull-right notice-more">
        <a class="more-notice" href="/Information/notice">查看更多</a>
    </div>
    <div class="notice pull-left">
        <div class="als-viewport">
            <ul class="als-wrapper">
                {% for item in data.notice.data%}
                <li class="als-item">
                    <a href="/Information/0/{{item.pid}}">
                        {{item.notice_title}}
                    </a>
                </li>
                {%endfor%}
            </ul>
        </div>
    </div>
</div>

<script>
    $(function () {
        if ($(".notice ul li").length > 1) {
            // 轮播滑动
            $(".notice").als({
                visible_items: 1,
                scrolling_items: 1,
                orientation: "vertical",
                circular: "yes",
                autoscroll: "yes",
                direction: "up",
                start_from: 0
            });
        }
    })
</script>